<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bg">

    <android.support.v7.widget.Toolbar android:id="@+id/set_alarm_toolbar"
                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                        android:background="@color/myToolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="编辑闹钟"
            android:textAlignment="center"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="20px"-->
    <!--android:orientation="horizontal">-->

    <!--<com.aigestudio.wheelpicker.WheelPicker-->
    <!--android:id="@+id/set_alarm_hour_picker"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1"/>-->

    <!--<com.aigestudio.wheelpicker.WheelPicker-->
    <!--android:id="@+id/set_alarm_minute_picker"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1"/>-->
    <!--</LinearLayout>-->
    <TimePicker
        android:theme="@style/myPickerTheme"
        android:id="@+id/set_alarm_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TimePicker>

    <CheckBox
        android:id="@+id/set_alarm_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:text="重复"
        android:textSize="20sp"
        android:textColor="@color/myBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px">

        <TextView
            android:id="@+id/set_alarm_Mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="一"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="二"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="三"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="四"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="五"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="六"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>

        <TextView
            android:id="@+id/set_alarm_Sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_alarm_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="确认"/>

        <Button
            android:id="@+id/set_alarm_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>